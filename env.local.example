# Local Development Environment Variables
# Copy this to .env for local development: cp env.local.example .env

NODE_ENV=development
PORT=5000
MONGO_PORT=27017

# MongoDB
MONGODB_URI=mongodb://mongodb:27017/liquidata

# Security (development defaults - OK for local)
JWT_SECRET=local-dev-secret-key
ADMIN_EMAIL=admin@liquidata.com
ADMIN_PASSWORD=admin123

# Volume mounts (development - full source code for hot reload)
SOURCE_MOUNT=.
DEST_MOUNT=/app

# Start command (with nodemon for hot reload)
START_COMMAND=npm run dev

